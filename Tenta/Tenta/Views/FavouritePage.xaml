<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tenta.Views.FavouritePage">
    <ContentPage.Content>
        <StackLayout>
            <CollectionView x:Name="Favourites">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5">
                            <Frame HorizontalOptions="FillAndExpand" BorderColor="Black" Padding="5" BackgroundColor="LightGreen">
                                <StackLayout Orientation="Horizontal" >
                                    <Label Text="{Binding }" FontSize="20"/>
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>